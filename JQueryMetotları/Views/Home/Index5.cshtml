
@{
    ViewBag.Title = "Index5";
}
@{
    SelectListItem[] liste = new SelectListItem[3]
    {
         new SelectListItem()    {Text="12 ay", Value="12"}
        ,new SelectListItem()   {Text="24 ay",Value="24"}
        ,new SelectListItem()   {Text="48 ay",Value="48"}
    };
    }

<h2>Kolay Kredi Hesaplama</h2>

<div class="row">
    @Html.Label("Çekilecek Tutar", new {@class="control-label"})
    @Html.TextBox("txtTutar")

</div>

<div class="row">
    @Html.Label("Vade", new {@class ="control-label"})
    @Html.DropDownList("vadesayisi",liste)
</div>
<div class="row">
    <button class="btn btn-success" id="btnHesap"> Kredi Hesapla </button>
</div>

<div class="row">
    @Html.Label("sonuc",new {@class ="control-label", id = "sonuc" })
</div>

<script>

    $("#btnHesap").click(function ()
    {
        var vade = $("#vadesayisi").val();
        var cekilentutar = $("#txtTutar").val();

        if (vade == 12)
        {
            cekilentutar = cekilentutar * 1.1;
        }
        else if (vade == 24)
        {
            cekilentutar = cekilentutar * 1.2;
            }
        else if (vade == 48)
        {
            cekilentutar = cekilentutar * 1.3;
        }
        var ayliktaksit = cekilentutar / vade;

            

        $("#sonuc").html("Geri ödenecek tutar: " + cekilentutar + "</br>" +"Aylık taksit tutarı:"+ ayliktaksit.toFixed(3));
      
    });
</script>